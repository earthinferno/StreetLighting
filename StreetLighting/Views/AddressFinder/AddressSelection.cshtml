@model StreetLighting.Models.PostcodeAddresses

@{
    ViewData["Title"] = "AddressSelection";
}

<div class="govuk-width-container">
    <a asp-controller="AddressFinder" asp-action="AddressSelection" class="govuk-back-link">Back</a>

    <main class="govuk-main-wrapper " id="main-content" role="main">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                <form asp-action="AddressSelection">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="govuk-form-group">
                        <fieldset class="govuk-fieldset">
                            <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                                What is your home address?
                            </legend>
                            <div>
                                <label class="govuk-label">Select an address</label>
                                <span asp-validation-for="SelectedAddress" class="govuk-error-message"></span>
                                <select asp-for="SelectedAddress"  asp-items="Model.Addresses" class="govuk-select" ></select>
                            </div>
                        </fieldset>
                    </div>
                    <div class="form-group">
                        <input type="submit" name="nextBtn" value="Continue" class="govuk-button" data-module="govuk-button" />
                    </div>

                </form>
            </div>
        </div>
    </main>
</div>