@model StreetLighting.Startup

@{
    ViewData["Title"] = "Index";
}


<div class="govuk-width-container">
    <div class="govuk-breadcrumbs">
        <ol class="govuk-breadcrumbs__list">
            <li class="govuk-breadcrumbs__list-item">
                <a class="govuk-breadcrumbs__link" href="#">Home</a>
            </li>
            <li class="govuk-breadcrumbs__list-item">
                <a class="govuk-breadcrumbs__link" href="#">Feedback</a>
            </li>
            <li class="govuk-breadcrumbs__list-item" aria-current="page">Street Lighting</li>
        </ol>
    </div>

    <main class="govuk-main-wrapper " id="main-content" role="main">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                <h1 class="govuk-heading-l">Street Lighting</h1>

                <p class="govuk-body">Use this service to:</p>

                <ul class="govuk-list govuk-list--bullet">
                    <li>Provide us with some feedback regarding the lighting in your street</li>
                    <li>Do so by answering some about yourself</li>
                    <li>And by answering some questions about your street lighting</li>
                </ul>

                <p class="govuk-body">Completeing this questionnaire should take about 5 minutes.</p>

                <form asp-action="Index">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <a href="javascript:document.forms[0].submit()"
                        role="button" draggable="false" class="govuk-button govuk-button--start" data-module="govuk-button">
                        Start now
                        <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
                            <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z" />
                        </svg>
                    </a>

                </form>

                <h2 class="govuk-heading-m">Before you start</h2>

                <p class="govuk-body">You can also <a class="govuk-link" href="#">answer by post</a>.</p>

                <p class="govuk-body">The online service is also available in <a class="govuk-link" href="#">Welsh (Cymraeg)</a>.</p>

            </div>

            <div class="govuk-grid-column-one-third">

                <!-- The Related items component is not part of GOV.UK Frontend but will be styled if used in the Prototype Kit -->

                <aside class="app-related-items" role="complementary">
                    <h2 class="govuk-heading-m" id="subsection-title">
                        Subsection
                    </h2>
                    <nav role="navigation" aria-labelledby="subsection-title">
                        <ul class="govuk-list govuk-!-font-size-16">
                            <li>
                                <a class="govuk-link" href="#">
                                    Related link
                                </a>
                            </li>
                            <li>
                                <a class="govuk-link" href="#">
                                    Related link
                                </a>
                            </li>
                            <li>
                                <a href="#" class="govuk-link govuk-!-font-weight-bold">
                                    More <span class="govuk-visually-hidden">in Subsection</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </aside>

            </div>
        </div>
    </main>
</div>


