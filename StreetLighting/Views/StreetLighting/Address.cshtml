@model StreetLighting.Models.RespondentAddress

@{
    ViewData["Title"] = "Address";
}

<div class="govuk-width-container">
    <a  asp-controller="StreetLighting" asp-action="EmailAddress" class="govuk-back-link">Back</a>

    <main class="govuk-main-wrapper " id="main-content" role="main">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                <form asp-action="Address">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="govuk-form-group">
                        <fieldset class="govuk-fieldset">
                            <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                                Where do you live?
                            </legend>
                            <div>
                                <label asp-for="AddressLine1" class="govuk-label"></label>
                                <span asp-validation-for="AddressLine1" class="govuk-error-message"></span>
                                <input asp-for="AddressLine1" class="govuk-input" type="text" />
                            </div>

                            <div>
                                <label asp-for="AddressLine2" class="govuk-label"></label>
                                <span asp-validation-for="AddressLine2" class="govuk-error-message"></span>
                                <input asp-for="AddressLine2" class="govuk-input" type="text" />
                            </div>

                            <div>
                                <label asp-for="City" class="govuk-label"></label>
                                <span asp-validation-for="City" class="govuk-error-message"></span>
                                <input asp-for="City" class="govuk-input" type="text" />

                            </div>

                            <div>
                                <label asp-for="PostCode" class="govuk-label"></label>
                                <span asp-validation-for="PostCode" class="govuk-error-message"></span>
                                <input asp-for="PostCode" class="govuk-input" type="text" />
                            </div>

                        </fieldset>
                    </div>
                    <div class="form-group">
                        <input type="submit" name="nextBtn" value="Next" class="govuk-button" data-module="govuk-button" />
                    </div>

                </form>
            </div>
        </div>
    </main>
</div>

